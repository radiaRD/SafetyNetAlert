<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
    <Properties>
        <Property name="LOG_PATTERN">%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ} %p %m%n</Property>
    </Properties>
    <Appenders>


        <RollingFile name="appLog"
                     fileName="D:\projetoc4\safetyNetAlert\log\application.log"
                     filePattern="D:\projetoc4\safetyNetAlert\log\application-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout pattern="${LOG_PATTERN}" />
            <Policies>
                <SizeBasedTriggeringPolicy size="19500KB" />
            </Policies>
            <DefaultRolloverStrategy max="1" />
        </RollingFile>

    </Appenders>
    <Loggers>
        <Logger name="com.safetyNet.safetyNetAlert" level="info" additivity="false">
            <AppenderRef ref="appLog" />
        </Logger>
        <!--<AppenderRef ref="Console" />    -->
        <Root level="info">
            <AppenderRef ref="appLog" />
        </Root>
    </Loggers>
</Configuration>
